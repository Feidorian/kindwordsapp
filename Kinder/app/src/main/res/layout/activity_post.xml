<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".readPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B9EFEDED"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:id="@+id/advice_list"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/img_str"
            android:onClick="go_to_post_list"
            android:padding="20dp"
            app:srcCompat="@drawable/letter" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="6.5"
            android:background="@drawable/letter_background">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center|top"
                android:padding="20dp"
                android:text="@string/story_str" />

        </ScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="3"
            android:contentDescription="@string/img_str"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/letter_inbox2" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>